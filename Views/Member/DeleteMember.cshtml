@model FinalProject.Models.MemberModel

@{
    ViewBag.Title = "DeleteMember";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">DeleteMember</h3>

<h4 class="text-center">Are you sure you want to delete this?</h4>
<hr />
<div class="container d-flex justify-content-center py-5">
    <div class="card w-75">
        <div class="card-header">
            <h4 class="text-center">Member Details</h4>
        </div>
        <div class="card-body">
            <div class="row my-3">
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text p-0  me-2 bg-transparent border-0"><i class="fas fa-user"></i></span>
                        <strong>@Html.DisplayNameFor(model => model.FullName):</strong>
                        &nbsp;@Html.DisplayFor(model => model.FullName)
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text p-0  me-2 bg-transparent border-0"><i class="fas fa-user-tie"></i></span>
                        <strong>@Html.DisplayNameFor(model => model.Profession):</strong>
                        &nbsp;@Html.DisplayFor(model => model.Profession)
                    </div>

                </div>
            </div>
            <div class="row my-3">
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text p-0  me-2 bg-transparent border-0"><i class="fas fa-venus-mars"></i></span>
                        <strong>@Html.DisplayNameFor(model => model.Gender):</strong>
                        &nbsp;@Html.DisplayFor(model => model.Gender)
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text p-0  me-2 bg-transparent border-0"><i class="fas fa-calendar-alt"></i></span>
                        <strong>@Html.DisplayNameFor(model => model.DateOfBirth):</strong>
                        &nbsp;@Html.Label(Model.DateOfBirth.ToShortDateString())
                    </div>
                </div>
            </div>
            <div class="row my-3">
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text p-0  me-2 bg-transparent border-0"><i class="fas fa-phone-alt"></i></span>
                        <strong>@Html.DisplayNameFor(model => model.MobileNo):</strong>
                        &nbsp;@Html.DisplayFor(model => model.MobileNo)
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text p-0  me-2 bg-transparent border-0"><i class="fas fa-city"></i></span>
                        <strong>@Html.DisplayNameFor(model => model.City):</strong>
                        &nbsp;@Html.DisplayFor(model => model.City)
                    </div>
                </div>
            </div>
            <div class="row my-3">
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text p-0  me-2 bg-transparent border-0"><i class="fas fa-address-card"></i></span>
                        <strong>@Html.DisplayNameFor(model => model.Pincode):</strong>
                        &nbsp;@Html.DisplayFor(model => model.Pincode)
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <span class="input-group-text p-0  me-2 bg-transparent border-0"><i class="fas fa-envelope"></i></span>
                        <strong>@Html.DisplayNameFor(model => model.Email): </strong>
                        &nbsp;<span>@Model.Email</span>
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card-footer">
        <input type="submit" value="Delete" class="btn btn-danger me-3" />
        @Html.ActionLink("Back", "AllMembers", "Member", new { @class = "btn btn-dark" })
    </div>
}
    </div>
</div>

